{
    "name": "imr-db-api",
    "description": "Infinite Magic Raid API",
    "author": {
        "name": "Petar Zarkov",
        "email": "pzarko1@gmail.com"
    },
    "license": "MIT",
    "version": "0.0.1",
    "main": "./build/main.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/petarzarkov/imr-db.git"
    },
    "homepage": "TBD",
    "scripts": {
        "clean": "rimraf ./build/**",
        "start": "node ./build/main.js",
        "prebuild": "rimraf build",
        "build": "nest build -p tsconfig.build.json",
        "predev": "rimraf build",
        "dev": "nest start --watch",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:create": "npx typeorm-ts-node-commonjs migration:create",
        "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d ./services/server/db/data-source.ts",
        "migration:up": "npx typeorm-ts-node-commonjs migration:run -d ./services/server/db/data-source.ts",
        "migration:down": "npx typeorm-ts-node-commonjs migration:revert -d ./services/server/db/data-source.ts",
        "lint": "eslint . -c .eslintrc.js --max-warnings 0",
        "lint:fix": "eslint . -c .eslintrc.js --fix"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.4",
        "@nestjs/core": "^10.3.4",
        "@nestjs/microservices": "^10.3.4",
        "@nestjs/platform-fastify": "^10.3.4",
        "@nestjs/config": "^3.2.0",
        "@nestjs/serve-static": "4.0.1",
        "@nestjs/mapped-types": "^2.0.5",
        "@nestjs/swagger": "^7.3.0",
        "@nestjs/terminus": "^10.2.3",
        "typeorm": "^0.3.20",
        "@nestjs/typeorm": "^10.0.2",
        "pg": "^8.11.3",
        "fastify": "^4.26.2",
        "@fastify/static": "6.5.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.5",
        "rxjs": "7.5.7",
        "reflect-metadata": "^0.2.1"
    },
    "devDependencies": {
        "@nestjs/testing": "^10.3.4",
        "@nestjs/cli": "^10.3.2"
    }
}
